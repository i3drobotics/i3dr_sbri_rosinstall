{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prerun",
            "type": "shell",
            "command": "source devel/setup.bash && export ROS_MASTER_URI=http://i3drL005:11311/",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "build_with_I3DR",
            "type": "shell",
            "command": "catkin config --extend /opt/ros/kinetic && catkin_make -DCMAKE_BUILD_TYPE=Debug -DENABLE_I3DR_ALG=ON -j4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build_without_I3DR",
            "type": "shell",
            "command": "catkin config --extend /opt/ros/kinetic && catkin_make -DCMAKE_BUILD_TYPE=Debug -DENABLE_I3DR_ALG=OFF -j4",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "catkin_make clean",
            "problemMatcher": []
        },
        {
            "label": "release",
            "type": "shell",
            "command": "sudo checkinstall --install=no catkin_make -j4 --cmake--args -DCMAKE_BUILD_TYPE=Release"
        }
    ]

}